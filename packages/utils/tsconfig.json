{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    "strict": false,
    "composite": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "customConditions": ["development"]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./test/**/*.ts",
    "./test/*.ts",
    "./examples/*.ts",
    "./examples/**/*.ts"
  ]
}
