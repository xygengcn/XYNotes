{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext","DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.d.ts"
  ]
}