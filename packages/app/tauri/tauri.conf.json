{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd ../web && pnpm build",
    "frontendDist": "../node_modules/@xynotes/web/dist",
    "devUrl": "http://localhost:8080"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "XY笔记",
  "version": "4.0.0",
  "identifier": "com.xynotes.dev",
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "alwaysOnTop": false,
        "resizable": true,
        "title": "XY笔记",
        "width": 1200,
        "height": 750,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}