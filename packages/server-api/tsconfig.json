{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "src/global.ts"]
}