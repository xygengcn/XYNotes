generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./notes.db"
}

model Note {
  nid       String  @id
  title     String
  type      String
  order     Int     @default(0)
  text      String?
  createdAt Int
  updatedAt Int
  intro     String?
  status    Float
  author    String?
}
