{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}
